<button class="btn btn-success"{{action "toggleModal"}}>Add a Review</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>New Review</h1>

    <form {{action 'addReview' on="submit"}}>
      <div class="form-group">
        <label for="content">Review</label>
        {{textarea value=content id="content" class="form-control" required="required"}}
      </div>

      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" class="form-control" required="required"}}
      </div>

      <div class="form-group">
        <label for="rating">Rating</label>
        {{star-rating value=rating id="rating "rating=review.rating on-click="updateRating"}}

      </div>

      <button class="btn btn-success">Add</button>
    </form>

  {{/modal-dialog}}
{{/if}}
